  <div class="col-xs-12 col-md-5">

    <% @posts.each do |p| %>
      <h2 style="color: black; float: left;"># <br></h2> <h1> <%= p.title %></h1>
    <% end %>

  </div>

  <div class="col-xs-12 col-md-7">
